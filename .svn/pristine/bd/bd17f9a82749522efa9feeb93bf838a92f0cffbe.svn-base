a {
	text-decoration: none;
}

.article-title a {
	color: #167F39;
	font-size: 18pt;
}

.article-title a:hover {
	color: #45BF55;
}

.article-body {	
	margin-top: 10px;
}

.post-info {

font-style: italic;
font-size: 9pt;

}

.article-part{
	border-bottom: 1px solid #e3e3e3;
	margin: 10px 0;
}

.article header p, .article-part header p, .article footer p, .article-part footer p, .article-content p{
	padding: 0;
	margin: 0;
}

.article-content-summary img{
	width: 290px;
}

.article-content-summary p img{
	width: 290px;
}

.article-content-summary blockquote{
	font-size: 10pt;
	font-family: Tahoma,Arial;
	color: #00AA00;
	text-align: left;
}

article a, .add a {
	font-family:Arial, Helvetica, sans-serif;
	color: #167F39;
	font-size: 10pt;
	font-weight: bold;
}

article a:hover, .add a:hover{
	color: #45BF55;
}

.article-title {
	padding: 0;
	margin: 0;
}

.disclaimer {
	float: left;
	text-align: justify;
	font-style: italic;
	background: #F3FFEB;
	border-top: 1px solid #e3e3e3;
}

.read-more {
	text-align: right;
}

.article-content {
	padding: 8px 20px;
	clear: both;
}

.author {
	float: left;
	margin-right: 5px;
}

.article-admin li, .article-admin ul{
	list-style: none;
	margin: 0;
	padding: 0;
	float: left;
}

.article-admin li:after {
	content: '|';
	padding:  0 2px;
}
.article-admin li:first-child:before {
	content: '(';
	padding:  0 2px;
}
.article-admin li:last-child:after {
	content: ')';
	padding:  0 2px;
}

.add {
	margin: 0;
	padding: 0;
}
.add:before {
	content: '(';
	padding:  0 2px;
}

.add:after {
	content: ')';
	padding:  0 2px;
}

.article-form {
	font-family: sans-serif;
}

.article-form input[type=text] {
	width: 540px;
	font-size: 18pt;
	margin-bottom: 10px;
	padding: 2px;
}
.article-form label {
	color: #045930;
	font-size: 18pt;
	margin-right: 10px;
}
.article-form input[type=submit] {
	margin: 10px 0;
	margin-left: 0;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
}